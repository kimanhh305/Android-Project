<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#08CBD1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.DOAN.doan_android.activity.ThongTinActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Đăng kí"
            android:textSize="30sp"
            android:textColor="#08CBD1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:id="@+id/edt_tenkhachhang"
            android:inputType="text"
            android:hint="Nhập tên khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:id="@+id/edt_sdt"
            android:hint="Nhập số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:hint="Nhập email"
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="85dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_xacnhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:background="#08CBD1"
                android:text="Xác Nhận"
                android:textColor="#fafafa"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_trove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"
                android:background="#08CBD1"
                android:text="Trở Về"
                android:textColor="#fafafa"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
